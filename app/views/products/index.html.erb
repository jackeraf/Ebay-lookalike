<p id="notice"><%= notice %></p>




<p id="notice"><%= flash[:error] %></p>

<div class="container">

  <div class="row">
  <h1 class="current-category"><%= params[:category].capitalize %></h1>
   <br>
   <div class="col-lg-12 col-md-12 grid-products">

    <% if @products.count == 0 %>
    <h3>There are no products of this category</h3>
    <% else %>
    
    <% @products.each do |product| %>
    <div class="col-lg-4 col-md-4">


      <a href="/products/<%= product.id%>"><img style="max-height:220px!important" src="/assets/<%= product.image_url %>" class="img-responsive"/></a>
      <h2><a href="/products/<%= product.id%>"><%= product.title %></a></h2>
      <h4><%= product.description %></h4>

      <p class="price_index"><%= product.price %></p>


    </div>
    <% end %>
    <% end %>

    <br>

  </div>


</div>
<% if  user_signed_in?%>
<h4><%= link_to 'New product', new_product_path %></h4>


<% end %>

</div>



